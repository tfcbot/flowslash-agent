{
  "name": "flowslash-hono-api",
  "version": "1.0.0",
  "description": "Standalone Hono API server for LangGraph workflow execution",
  "main": "dist/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=neutral",
    "deploy": "wrangler deploy",
    "deploy:vercel": "vercel --prod",
    "start": "node dist/index.js",
    "test": "vitest"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "@langchain/langgraph": "^0.2.74",
    "@langchain/openai": "^0.5.10",
    "@langchain/anthropic": "^0.3.20",
    "@langchain/google-genai": "^0.2.8",
    "@composio/core": "^0.1.8-alpha.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240000.0",
    "wrangler": "^3.0.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "type": "module"
}
